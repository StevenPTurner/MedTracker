<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.medtracker.Fragments.MedicationAddFragment">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ImageView
            android:layout_width="75dp"
            android:layout_height="75dp"
            android:src="@drawable/ic_pill_black_48dp"
            android:id="@+id/heading_image"
            android:layout_marginTop="20dp"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true" />

        <TextView
            android:text="Name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/text_name"
            android:textSize="16sp"
            android:textColor="@color/textDark"
            android:layout_below="@+id/heading_image"
            android:layout_alignParentStart="true"
            android:layout_marginTop="31dp"
            android:layout_marginLeft="16dp"
            android:layout_marginBottom="8dp"/>

        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Medication Name"
            android:textSize="20sp"
            android:textColor="@color/colorAccent"
            android:id="@+id/edit_name"
            android:layout_marginLeft="11dp"
            android:layout_alignTop="@+id/text_name"
            android:layout_alignParentStart="true"
            android:layout_marginTop="15dp" />

        <TextView
            android:text="Dose"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/text_dose"
            android:textSize="16sp"
            android:textColor="@color/textDark"
            android:layout_marginTop="31dp"
            android:layout_below="@+id/edit_name"
            android:layout_alignParentStart="true"
            android:layout_marginLeft="16dp"
            android:layout_marginBottom="8dp"/>

        <EditText
            android:id="@+id/edit_dose"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Medication dose in mg"
            android:textSize="20sp"
            android:textColor="@color/colorAccent"
            android:layout_marginLeft="11dp"
            android:layout_alignTop="@+id/text_dose"
            android:layout_alignParentStart="true"
            android:layout_marginTop="15dp"/>

        <TextView
            android:text="Instructions"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/text_instructions"
            android:textSize="16sp"
            android:textColor="@color/textDark"
            android:layout_below="@+id/edit_dose"
            android:layout_alignParentStart="true"
            android:layout_marginTop="31dp"
            android:layout_marginLeft="16dp"
            android:layout_marginBottom="8dp"/>

        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/edit_instructions"
            android:text="(Take once daily"
            android:textSize="20sp"
            android:textColor="@color/colorAccent"
            android:layout_marginLeft="11dp"
            android:layout_alignTop="@+id/text_instructions"
            android:layout_alignParentStart="true"
            android:layout_marginTop="15dp"/>

        <Button
            style="@style/Widget.AppCompat.Button.Colored"
            android:id="@+id/button_save_medication"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Save"
            android:textColor="@color/textLight"
            android:layout_alignParentBottom="true"
            android:layout_alignParentEnd="true" />



    </RelativeLayout>


</FrameLayout>
