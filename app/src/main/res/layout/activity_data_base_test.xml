<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_data_base_test"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:background="@drawable/startbackground"
    tools:context="com.medtracker.medtracker.com.medtracker.Activities.DataBaseTestActivity">

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="text"
        android:hint="message"
        android:ems="10"
        android:layout_above="@+id/button_insert_to_database"
        android:layout_alignStart="@+id/button_insert_to_database"
        android:layout_marginBottom="15dp"
        android:id="@+id/edittext_to_insert"
        android:layout_alignEnd="@+id/button_insert_to_database" />

    <Button
        android:text="Insert To Database"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="106dp"
        android:id="@+id/button_insert_to_database"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:onClick="updateDatabase"/>

    <TextView
        android:text="USER: none"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="55dp"
        android:id="@+id/textView_user"
        android:textSize="36sp" />

    <TextView
        android:text="Message: none"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="43dp"
        android:id="@+id/textView_message"
        android:textSize="36sp"
        android:layout_below="@+id/textView_user"
        android:layout_centerHorizontal="true" />

</RelativeLayout>
